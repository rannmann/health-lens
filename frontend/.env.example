# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
# This is the base URL for all API requests. Change this if your backend is hosted elsewhere.

# Fitbit OAuth Configuration
VITE_FITBIT_AUTH_URL=http://localhost:3000/api/fitbit/auth
# This is the URL that initiates the Fitbit OAuth flow.

# Feature Flags
VITE_ENABLE_FITBIT=true
VITE_ENABLE_AWAIR=false
VITE_ENABLE_WEATHER=false
# These flags can be used to enable/disable specific integrations in the frontend.

# UI Configuration
VITE_DEFAULT_DATE_RANGE=7
# Number of days to show by default in date range selectors (e.g., 7 for one week)

# Development Settings
VITE_DEBUG_MODE=false
# Set to true to enable additional debugging information in the console